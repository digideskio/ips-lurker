var pluginGlue = require('../plugin_glue');
exports.init = function(chat) {
  chat.on('message', function(msg) {
      if (!chat.settled) { return; }

      if (msg.match(/brain/i)) {
        console.log("ABOUT TO LOCK");
        // BEGIN LOCK SECTION
        pluginGlue.lock();
        setTimeout(function() {
            pluginGlue.unlock();
            console.log("SUCCESS UNLOCK");
          }, 20000);
        
      }
    });
};
